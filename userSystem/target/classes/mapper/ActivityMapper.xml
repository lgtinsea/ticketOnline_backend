<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjCourse.softwareEngineering.backend.dao.mapper.ActivityMapper">
    <resultMap id="BaseResultMap" type="com.tjCourse.softwareEngineering.backend.dto.ReturnBasicActivityInfoDTO">
        <id column="ID" jdbcType="INTEGER" property="ID"/>
        <result column="poster" jdbcType="VARCHAR" property="poster"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="time_start" jdbcType="TIMESTAMP" property="time_start"/>
        <result column="time_end" jdbcType="TIMESTAMP" property="time_end"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
    </resultMap>


    <select id="getActivitiesBasicInfo_5" parameterType="String" resultType="com.tjCourse.softwareEngineering.backend.dto.ReturnBasicActivityInfoDTO">
        select ID,poster,name,time_start,time_end,address
        from activity
        where type = #{variety}
        limit 5
    </select>

    <select id="getActivitiesBasicInfo" parameterType="String" resultType="com.tjCourse.softwareEngineering.backend.dto.ReturnBasicActivityInfoDTO">
        select ID,poster,name,time_start,time_end,address
        from activity
        where type = #{variety}
    </select>

    <select id="getMyActivitiesBasicInfo" parameterType="Integer" resultType="com.tjCourse.softwareEngineering.backend.dto.ReturnBasicActivityInfoDTO">
        select ID,poster,name,time_start,time_end,address
        from activity join appointment a on activity.ID = a.activityID
        where userID = #{userID}
    </select>
</mapper>